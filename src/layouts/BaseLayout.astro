---
import '../styles/global.css';

type Props = {
  title?: string;
  description?: string;
  robots?: string;
};

const title = Astro.props.title ?? 'Repo Audit';
const description = Astro.props.description ?? 'AI-powered open-source repository scoring.';
const robots = Astro.props.robots ?? 'index,follow';

const site = Astro.site ?? new URL('https://repo-audit.coey.dev');
const canonical = new URL(Astro.url.pathname, site).toString();
const ogImage = new URL('/og.png', site).toString();
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonical} />
    <meta name="robots" content={robots} />
    <meta name="theme-color" content="#00d4aa" />
    <meta name="color-scheme" content="dark" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="Repo Audit" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:url" content={canonical} />
    <meta property="og:image" content={ogImage} />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />

    <link rel="manifest" href="/manifest.webmanifest" />
    <meta name="application-name" content="Repo Audit" />
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-title" content="Repo Audit" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent" />

    <link rel="apple-touch-icon" sizes="180x180" href="/icons/apple-touch-icon.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32.png" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="icon" href="/favicon.ico" />
  </head>
  <body class="min-h-dvh bg-bg text-text antialiased">
    <div class="noise"></div>
    <div class="relative z-10">
      <slot />
    </div>

    <script is:inline>
      if ('serviceWorker' in navigator) {
        window.addEventListener('load', () => {
          navigator.serviceWorker.register('/sw.js').catch(() => {});
        });
      }
    </script>
  </body>
</html>
