---
import BaseLayout from './BaseLayout.astro';

type Props = {
  title?: string;
  description?: string;
};

const title = Astro.props.title ?? 'Repo Audit';
const description = Astro.props.description ?? 'Documentation.';
---

<BaseLayout title={title} description={description}>
  <main class="min-h-dvh px-4 py-10">
    <div class="mx-auto w-full max-w-3xl">
      <div class="mb-7 flex flex-wrap items-center justify-between gap-3">
        <a
          href="/"
          class="rounded-lg border border-border bg-surface px-3 py-2 font-mono text-[11px] text-dim transition hover:border-accent/40 hover:text-text"
        >
          back
        </a>
        <div class="font-mono text-[11px] text-dim">docs</div>
      </div>

      <article class="doc rounded-2xl border border-border bg-surface p-5 sm:p-6">
        <slot />
      </article>
    </div>
  </main>

  <style>
    .doc :global(h1) {
      font-family: 'Cormorant Garamond', Georgia, serif;
      font-size: clamp(28px, 3.8vw, 44px);
      line-height: 1.05;
      letter-spacing: -0.02em;
      margin: 0 0 12px 0;
      color: rgb(var(--c-text));
    }
    .doc :global(h2) {
      font-family: 'IBM Plex Sans', system-ui, sans-serif;
      font-weight: 650;
      font-size: 14px;
      letter-spacing: 0.02em;
      text-transform: none;
      margin: 22px 0 10px 0;
      color: rgb(var(--c-text));
    }
    .doc :global(p) {
      font-family: 'IBM Plex Sans', system-ui, sans-serif;
      font-size: 14px;
      line-height: 1.7;
      color: rgb(var(--c-muted));
      margin: 10px 0;
    }
    .doc :global(hr) {
      border: none;
      height: 1px;
      margin: 18px 0;
      background: rgb(var(--c-border));
    }

    /* Tables: minimal, readable, horizontally scrollable. */
    .doc :global(table) {
      display: block;
      width: 100%;
      overflow-x: auto;
      border-collapse: collapse;
      border-spacing: 0;
      margin: 12px 0 6px 0;
      background: rgb(var(--c-bg));
      border: 1px solid rgb(var(--c-border));
      border-radius: 12px;
    }
    .doc :global(thead) {
      background: rgb(var(--c-surface-2));
    }
    .doc :global(th),
    .doc :global(td) {
      font-family: 'IBM Plex Sans', system-ui, sans-serif;
      font-size: 12px;
      line-height: 1.5;
      padding: 10px 12px;
      border-top: 1px solid rgb(var(--c-border));
      border-right: 1px solid rgb(var(--c-border));
      vertical-align: top;
      min-width: 180px;
    }
    .doc :global(th) {
      font-family: 'IBM Plex Mono', ui-monospace, Menlo, monospace;
      font-size: 11px;
      letter-spacing: 0.04em;
      text-transform: uppercase;
      color: rgb(var(--c-muted));
      border-top: none;
    }
    .doc :global(tr > *:last-child) {
      border-right: none;
    }
    .doc :global(tbody tr:hover td) {
      background: rgb(var(--c-surface) / 0.6);
    }
    .doc :global(strong) {
      color: rgb(var(--c-text));
      font-weight: 650;
    }
    .doc :global(code) {
      font-family: 'IBM Plex Mono', ui-monospace, Menlo, monospace;
      font-size: 12px;
      color: rgb(var(--c-text));
      background: rgb(var(--c-surface-2));
      border: 1px solid rgb(var(--c-border));
      border-radius: 8px;
      padding: 2px 6px;
    }
  </style>
</BaseLayout>

